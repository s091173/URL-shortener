<main class="text-center">
  <h1 class="mt-5">URL Shortener</h1>
  <i class="fas fa-link fa-7x mt-5"></i>
  <form action="/shorten/output" method="POST" class="mt-5">
    <div>
      <input type="url" name="website" placeholder="Input URL here" style="width: 300px;">
    </div>
    <div class="mt-3">
      <input type="submit" value="Shorten" class="btn btn-info">
    </div>
  </form>
</main>